{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "fiip",
  "version": "3.0.1",
  "identifier": "com.darkii.fiip",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/darkiifr/Fiip/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDk3QjA3RUM2NTQ4NDRBMkMKUldRc1NvUlV4bjZ3bDQzSWJ2bHFCMmd5Q0FCUUxBVStjaGNFZVEycldDdEZDMzYzZTdvb29yYXMK"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      ".portable"
    ],
    "windows": {
      "wix": {
        "language": "fr-FR"
      },
      "nsis": {
        "installMode": "currentUser",
        "languages": [
          "French"
        ]
      }
    }
  }
}